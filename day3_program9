Numbers Greater Than Target Value:

#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>


int main() {
    int n, i, target;
    int sum = 0, count = 0;

    scanf("%d", &n);

    int arr[n];

   
    for(i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

   
    scanf("%d", &target);

    printf("The Target values are");

   
    for(i = 0; i < n; i++) {
        if(arr[i] > target) {
            printf(" %d", arr[i]);
            sum += arr[i];
            count++;
        }
    }

   
    printf("\nsum of value is %d\n", sum);

    if (count > 0) {
        float avg = (float)sum / count;
        printf("Average of the value is %.1f\n", avg);
    } else {
        printf("Average of the value is 0.0\n");
    }

    return 0;
}
