Positive or Negative:

#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    
    int a;
        scanf("%d",&a);
    if(a==0)
    {
        printf("The Given Number %d is Zero.",a);
    }
    else if(a>0)
    {
        printf("The Given Number %d is Positive.",a);
    }
    else
    {
        printf("The Given Number %d is Negative.",a);
    }
return 0;
}
