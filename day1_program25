Mark Calculation:

#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    char a[50];
    int b;
    int c;
    int d;
    int e;
    int f;
    scanf("%s%d%d%d%d%d",a,&b,&c,&d,&e,&f);
    int t=b+c+d+e+f;
    float avg=t/5.0;
    printf("Name of the Student:%s\n",a);
    printf("Total marks:%d\n",t);
    printf("Average marks:%.1f\n",avg);

    return 0;
}
