FENCING THE GROUND:

#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    
    int l;
    int b;
    float c;
    float d;
    scanf("%d%d",&l,&b);
    
    c=l*b;
    d=2*(l+b);
    
    printf("Required length is %.2fm\n",d);
    printf("Required quantity of carpet is %.2fsqm\n",c);
      
    return 0;
}
