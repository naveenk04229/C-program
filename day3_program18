Spiral Pattern-01:

#include <math.h>
#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <assert.h>
#include <limits.h>
#include <stdbool.h>

int main() {
    
     int n;
    scanf("%d", &n);

    int spiral[n][n];
    int top = 0, bottom = n - 1, left = 0, right = n - 1;
    int num = 1;

    while (top <= bottom && left <= right) {
        for (int i = left; i <= right; i++) {
            spiral[top][i] = num++;
        }
        top++;

        for (int i = top; i <= bottom; i++) {
            spiral[i][right] = num++;
        }
        right--;

        for (int i = right; i >= left; i--) {
            spiral[bottom][i] = num++;
        }
        bottom--;

        for (int i = bottom; i >= top; i--) {
            spiral[i][left] = num++;
        }
        left++;
    }

    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            printf("%d ", spiral[i][j]);
        }
        printf("\n");
    }

   
    return 0;
}
